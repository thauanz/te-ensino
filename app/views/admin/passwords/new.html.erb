<h2 id="title">Esqueceu sua senha?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
  <p class="frame">Digite seu endereço de email abaixo e enviaremos instruções de redefinição de senha</p>
  <p><%= f.label :email %>
  <%= f.text_field :email %></p>

  <p><%= f.submit "Enviar" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
